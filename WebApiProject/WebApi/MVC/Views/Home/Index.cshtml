@model List<MVC.ResponseModels.ProductResponseModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Web Api Test Product</h1>
  
</div>

<a class="btn btn-success" asp-action="Create" asp-controller="Home"> Yeni Ürün Ekle </a>
<table class="table table-bordered">
    <thead class="thead-dark">
<tr>
        <th> Ürünün Adı</th
         <th> Ürünün Tutarı</th>
          <th> Ürünün Stoğu</th>
          <th> İşlemler </th>

</tr>
 </thead>
 <tbody> 
        @{
            if(Model != null)
            {
                                @foreach(var product in Model)
                    {
        
                    <tr>     
                    <td> @product.Name</td>
                    <td> @product.Price</td>
                    <td> @product.Stock</td>
                     <td> <a class="btn btn-dark" asp-action="Update" asp-controller="Home" asp-route-id="@product.Id"> Güncelle</a>
                          <a class="btn btn-danger" asp-action="Remove" asp-controller="Home" asp-route-id="@product.Id"> Sil</a></td>
                </tr>

                    }
                            }

             }

   </tbody>
</table>