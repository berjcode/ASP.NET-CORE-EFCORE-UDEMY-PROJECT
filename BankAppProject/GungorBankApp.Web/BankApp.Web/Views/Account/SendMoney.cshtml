@model SelectList
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mt-3"> 

    <form class="w-75 mx-auto" asp-action="SendMoney" asp-controller="Account" method="post">
        <div class="mb-3">
            <input type="hidden" name="SenderId" value="@ViewBag.SenderId" readonly />
            <label> Göndericeğiniz Hesap Numaraları:</label>
            <select class="form-select" asp-items="@Model" name="AccountId">
            </select>
        </div>

        <div class="mb-3">
            <label>Gönderilecek Tutar</label>
            <input type="number" name="Amount" class="form-control" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark"> Para Gönder</button>

        </div>

    </form>

</div>

