@model UserCreateModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-4">
    <form asp-action="SignUp" asp-controller="Account" method="post" class="P-4 w-75 mx-auto">
       
        <div class="mb-3">
            <label> Adınız: </label>
            <input type="text" asp-for="@Model.FirsName" class="form-control"/> 
        </div>
        <div class="mb-3">
            <label> Soyadınız: </label>
            <input type="text" asp-for="@Model.SurName" class="form-control" />
        </div>
        <div class="mb-3">
            <label> Kullanıcı Adı: </label>
            <input type="text" asp-for="@Model.UserName" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Telefon Numaranız </label>
            <input type="number" type="text" asp-for="@Model.PhoneNumber" class="form-control" />
        </div>
        <div class="mb-3">
            <select class="form-select" asp-items="@Model.Genders" asp-for="@Model.GenderId">
                <option value="0"> Bir Cinsiyet Seçiniz</option>

            </select>
        </div>
        <div class="mb-3">
            <label> şifre: </label>
            <input type="password" asp-for="@Model.Password" class="form-control" />
        </div>
        <div class="mb-3">
            <label> şifre: </label>
            <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
        </div>

      

        <div class="text-danger"  asp-validation-summary="All">
            <button type="submit" class="btn btn-primary"> Kayıt Ol</button>
        </div>
    </form>    


</div>