@model List<AdvertisementListDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="container">



    @{
        if (Model?.Count > 0)
        {
            <div class="text-end my-3 p-1">
                <a class="btn btn-success" asp-asp-controller="Application" asp-action="Create"> Yeni İlan Oluştur</a>

            </div>


            <table class="mt-4 table table-sm table-hover table-striped">
                <thead>
                    <tr>

                        <td> İlan Başlığı</td>
                        <td> İlan Tarihi </td>
                        <td> İlan durumu </td>
                        <td> İşlemler</td>


                    </tr>
                </thead>

                <tbody>
                    @foreach (var advertisement in Model)
                    {
                        <tr>
                            <td> @advertisement.Title</td>
                            <td> @advertisement.CreatedDate.ToString("dddd, dd MMMM yyyy")</td>
                            <td> @(advertisement.status ? "Aktif" : "Pasif")</td>

                            <td>

                                <a class="btn btn-success" asp-action="Update" asp-asp-controller="Application" asp-route-id="@advertisement.Id"> Güncelle</a>
                                <a class="btn btn-danger" asp-action="Remove" asp-asp-controller="Application" asp-route-id="@advertisement.Id"> Sil</a>
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        }
        else
        {

            <div class="mt-3 text-center lead">


                <a class="btn btn-success" asp-asp-controller="Application" asp-action="Create"> Yeni İlan Oluştur</a>

                <p>Herhangi Bir İlan  bulunamamıştır.  </p>

            </div>
        }
    }

</div>