@model List<AccountListModel>
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row mt-4">
    <div class="col-6"> 


        <div class="card" style="width: 18rem;">
            
            <div class="card-body">
                <h5 class="card-title">Kullanıcı Bilgisi </h5>
                <p class="card-text">Ad: @ViewBag.FullName</p>
                <a  asp-action="Index"  asp-controller ="Home" class="btn btn-primary">Kullanıcı Listesine Geri Dön</a>
            </div>
        </div>
    </div>
    <div class="col-6">
        <h5> Hesap Bilgileri </h5>
        @if(Model.Count >0) ///Model != null
        {
            foreach(var account in Model)
            {
               <div class="card" style="width: 18rem;">

                <div class="card-body">
                    <h5 class="card-title">@account.AccountNumber</h5>
                    <p class="card-text">Bakiye Bilgisi: @account.Balance</p>
                        <a asp-action="SendMoney" asp-controller="Account" asp-route-accountId="@account.Id" class="btn btn-secondary">Para Gönder</a>
                </div>
            </div>  
            }
           
        }
        else

        {
            <div class="bg-danger text-white text-center" >
                
                Bilgi bulunamamaktadır.
            </div>

        }
            
       
       
    </div>
    </div>